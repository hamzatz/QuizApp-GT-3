<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32sp"
        android:text="Quiz"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:layout_marginLeft="67dp"
        android:paddingTop="20dp"
        android:text="Questions amount:"
        android:textColor="@color/colorText_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:layout_toRightOf="@+id/question_text"
        android:paddingTop="20dp"
        android:text="10"
        android:textColor="@color/colorforNumber" />


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_text"
        android:layout_centerHorizontal="true"
        android:max="50"
        android:min="5"
        android:paddingTop="10dp"
        android:theme="@style/AppTheme" />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_marginLeft="67dp"
        android:paddingTop="10dp"
        android:text="Category"
        android:textColor="@color/colorText_1"

        />


    <Spinner
        android:id="@+id/spinner_one"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_below="@+id/text_category"
        android:layout_marginLeft="67dp"


        />


    <TextView
        android:id="@+id/text_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_one"
        android:layout_marginLeft="67dp"
        android:paddingTop="10dp"
        android:text="Difficulty"
        android:textColor="@color/colorText_1" />


    <Spinner
        android:id="@+id/spinner_two"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_below="@+id/text_difficulty"
        android:layout_marginLeft="67dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/spinner_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorButton"
        android:text="START"
        android:textColor="@color/colorButtonText"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:background="@color/colorButtonText"
        app:menu="@menu/bottom_nav"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>